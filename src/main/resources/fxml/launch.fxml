<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="750.0" styleClass="background" stylesheets="@../css/launch.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boardgame.controller.LaunchScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <top>
        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-font-size: 50;" text="Kavics kapkodó" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin></Label>
    </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25.0" style="-fx-font-size: 25;" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="errorLabel" text="Add meg a játékosok neveit!" textFill="RED">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin></Label>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onStartButtonClick" prefHeight="70.0" prefWidth="250.0" text="Start" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
               <children>
                  <TextField fx:id="firstPlayerLabel" promptText="1. játékos neve" />
                  <TextField fx:id="secondPlayerLabel" promptText="2. játékos neve" />
               </children>
            </HBox>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onHighscoresButtonClick" prefHeight="70.0" prefWidth="250.0" text="Eredmények" />
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onRulesButtonClick" prefHeight="70.0" prefWidth="250.0" text="Szabályok" />
            <Label fx:id="rulesLabel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="160.0" prefWidth="600.0" style="-fx-font-size: 22;" text="A játékosok a játék során a tábláról felváltva kell levegyenek legalább 1, legfeljebb 4 kavicsot. Levenni csak egy sorban, vagy egy oszlopban lévő kavicsokat lehet, kizárólag úgy, hogy nincs köztük üres mező. Aki utoljára lép, az veszít." textAlignment="CENTER" wrapText="true" />
         </children>
         <padding>
            <Insets top="60.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
